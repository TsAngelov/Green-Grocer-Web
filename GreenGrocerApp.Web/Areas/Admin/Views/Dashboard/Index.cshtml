@{
    ViewData["Title"] = "Dashboard";
}
<h1 class="mb-4">Admin Dashboard</h1>
<div class="row g-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-primary">Manage</a>
                <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-secondary">Create</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Categories</h5>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-primary">Manage</a>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-secondary">Create</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Suppliers</h5>
                <a asp-area="Admin" asp-controller="Suppliers" asp-action="Index" class="btn btn-primary">Manage</a>
                <a asp-area="Admin" asp-controller="Suppliers" asp-action="Create" class="btn btn-secondary">Create</a>
            </div>
        </div>
    </div>
</div>