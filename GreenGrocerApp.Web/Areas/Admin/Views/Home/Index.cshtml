@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Dashboard</h1>
<div class="row">
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <a class="btn btn-primary me-2" asp-area="Admin" asp-controller="Products" asp-action="Index">Manage</a>
                <a class="btn btn-secondary" asp-area="Admin" asp-controller="Products" asp-action="Create">Create</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Categories</h5>
                <a class="btn btn-primary me-2" asp-area="Admin" asp-controller="Categories" asp-action="Index">Manage</a>
                <a class="btn btn-secondary" asp-area="Admin" asp-controller="Categories" asp-action="Create">Create</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Suppliers</h5>
                <a class="btn btn-primary me-2" asp-area="Admin" asp-controller="Suppliers" asp-action="Index">Manage</a>
                <a class="btn btn-secondary" asp-area="Admin" asp-controller="Suppliers" asp-action="Create">Create</a>
            </div>
        </div>
    </div>
</div>  