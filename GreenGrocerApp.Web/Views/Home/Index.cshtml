@model GreenGrocerApp.Web.ViewModels.Home.HomeIndexViewModel

@{
    ViewData["Title"] = "Home";
}

<section class="py-5 mb-5 text-center text-white" style="background: linear-gradient(135deg,#56ab2f,#a8e063);">
    <div class="container">
        <h1 class="display-4 fw-bold">Fresh From Farm to Table</h1>
        <p class="lead">Quality produce delivered straight to your door.</p>
        <div class="mt-4">
            <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg me-2">Shop Products</a>
            <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-light btn-lg">Browse Categories</a>
        </div>
    </div>
</section>

<section class="mt-4">
    <h2>Featured Categories</h2>
    <div class="row">
        @if (Model?.Categories?.Any() == true)
        {
            @foreach (var category in Model.Categories)
            {
                <partial name="_FeaturedCategory" model="category" />
            }
        }
        else
        {
            <p>No featured categories available.</p>
        }
    </div>
</section>

<section class="container mb-5">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col">
                @await Html.PartialAsync("_ProductCardPartial", product)
            </div>
        }
    </div>
</section>