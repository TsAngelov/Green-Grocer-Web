@model GreenGrocerApp.Web.ViewModels.Products.ProductViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="card product-card mb-3">
    <div class="row g-0">
        <div class="col-md-6">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" class="img-fluid rounded-start" alt="@Model.Name" />
            }
        </div>
        <div class="col-md-6">
            <div class="card-body">
                <h1 class="card-title">@Model.Name</h1>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><strong>Category:</strong> @Model.CategoryName</p>
                <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p class="card-text"><strong>In Stock:</strong> @Model.QuantityInStock</p>
                <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="input-group mb-3" style="max-width: 200px;">
                        <input type="number" name="quantity" value="1" min="1" max="@Model.QuantityInStock" class="form-control" />
                        <button type="submit" class="btn btn-success" @(Model.QuantityInStock == 0 ? "disabled" : "")>Add to Cart</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>