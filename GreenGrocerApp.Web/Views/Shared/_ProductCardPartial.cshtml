@model GreenGrocerApp.Web.ViewModels.Products.ProductViewModel

<div class="card h-100 product-card">
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Url.Content(Model.ImageUrl)" class="card-img-top" alt="@Model.Name" />
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <p class="card-text">@Model.Description</p>
        }
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Category: @Model.CategoryName</li>
        <li class="list-group-item">Price: @Model.Price.ToString("C")</li>
        <li class="list-group-item">In Stock: @Model.QuantityInStock</li>
    </ul>
    <div class="card-body">
        <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
        <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline ms-2">
            <input type="hidden" name="productId" value="@Model.Id"/>
            <input type="hidden" name="quantity" value="1" />
            <button type="submit" class="btn btn-success" @(Model.QuantityInStock == 0 ? "disabled" : "")>Add to Cart</button>
        </form>
    </div>
</div>
    