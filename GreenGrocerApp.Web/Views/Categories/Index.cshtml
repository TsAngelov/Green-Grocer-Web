@model IEnumerable<GreenGrocerApp.Web.ViewModels.Categories.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Products</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.ProductsCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>